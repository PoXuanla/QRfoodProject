<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_databg"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".Profile_ModifyData">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_databg2"
        android:elevation="20dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="修改資料"
        android:textColor="#ffffff"
        android:textSize="25sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:alpha="0.5"
        android:background="#BDBDBD" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="電子郵件"
                    android:drawableLeft="@drawable/register_email"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="修改電子郵件帳號"
                android:inputType="textEmailAddress"
                android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="姓名"
                        android:drawableLeft="@drawable/login_name"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="修改姓名"
                        android:inputType="text"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="性別"
                        android:drawableLeft="@drawable/register_gender"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"/>
                    <RadioGroup
                        android:id="@+id/gender_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <RadioButton
                            android:id="@+id/male_radio_btn"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/register_radio_selector"
                            android:textColor="@drawable/register_radio_textselector"
                            android:text="@string/Male"
                            android:textSize="30sp"
                            android:checked="true"
                            android:gravity="center"
                            android:button="@android:color/transparent" />
                        <RadioButton
                            android:id="@+id/female_radio_btn"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/register_radio_selector"
                            android:textColor="@drawable/register_radio_textselector"
                            android:textSize="30sp"
                            android:text = "@string/Female"
                            android:gravity="center"
                            android:button="@android:color/transparent" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="身高"
                        android:drawableLeft="@drawable/register_height"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/edtHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="修改身高(cm)"
                        android:inputType="number"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="體重"
                        android:drawableLeft="@drawable/register_weight"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/edtWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="修改體重(kg)"
                        android:inputType="number"
                        android:textSize="30sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="以下這個填空是填你平常在外的運動量\n例如：低=1、稍低=2、適=3、高=4"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="運動量"
                        android:drawableLeft="@drawable/register_exercise"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/edtExercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:textSize="30sp" />
                </LinearLayout>

            <Button
                android:id="@+id/commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/profile_button_shape"
                android:text="確認提交"
                android:textSize="30sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>