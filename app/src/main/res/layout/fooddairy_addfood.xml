<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FoodDairy.FoodDairy_AddFood">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#7B1FA2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9C27B0"
        android:elevation="20dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="新增食物"
        android:textColor="#ffffff"
        android:textSize="25dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:alpha="0.5"

        android:background="#BDBDBD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="時段"
                android:textColor="#212121"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/Addfood_time"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="位置"
                android:textColor="#212121"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/Addfood_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"

                android:gravity="center"
                android:text="餐廳"
                android:textColor="#212121"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/Addfood_restaurant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"

                android:gravity="center"
                android:text="食物"
                android:textColor="#212121"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/Addfood_food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"

                android:gravity="center"
                android:text="份數"
                android:textColor="#212121"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/Addfood_serving"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <Button
            android:id="@+id/Addfood_input"
            android:layout_width="80dp"
            android:layout_height="50dp"

            android:layout_gravity="center"

            android:text="提交"
            android:textColor="#FFFFFF"
            android:textSize="25dp"/>
    </LinearLayout>
</LinearLayout>