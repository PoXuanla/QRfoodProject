<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#EEEEEE"
        android:padding="20dp">
        <TextView
            android:id="@+id/item_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="REStaurant"
            android:background="@drawable/fooddairy_button_item"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="40px" />
        <TextView
            android:id="@+id/item_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="FOOD"
            android:background="@drawable/fooddairy_textview_shape"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="80px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/item_remove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/fooddairy_xbutton" />
        <TextView
            android:id="@+id/item_serving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:padding="10dp"
            android:text="number"
            android:textColor="#000000"
            android:textSize="60px" />
    </LinearLayout>

</androidx.cardview.widget.CardView>